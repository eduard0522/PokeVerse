---
import { pokemonTypes } from 'src/utilities/pokemonTypes'

interface Props {
  types?: string[]
  columns?: boolean
}

const { types , columns } = Astro.props
---
  <ul
class:list={['text-slate-100 capitalize flex flex-wrap justify-center items-center',
  {'md:grid md:grid-flow-col md:auto-cols-[minmax(60px,1fr)] md:grid-rows-[repeat(4,minmax(60px,auto))] gap-2 md:gap-4' : columns}
]}

  >
    {
      types?.map((type: string) => (
        <li
          class={`md:px-4 md:py-2 text-base md:text-lg rounded-md text-white font-bold text-center`}
        >
          <img
            src={`/pokemonTypes/${type}.png`}
            alt={`tipo de pokÃ©mon ${type}`}
            class=" w-10 md:w-16 "
          />
          {pokemonTypes[type]}
        </li>
      ))
    }
  </ul>

