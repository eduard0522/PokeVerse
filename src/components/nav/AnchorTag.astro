---
interface Props{
  content : string
  path : string
}
const { content , path} = Astro.props
const currentPath = Astro.url.pathname
---   
<div>
  <a href={path}  transition:menu-link class:list={["capitalize text-zinc-100 hover:text-slate-300 text-xl md:text-2xl " ,
  { 'active' :  path == currentPath }
]}  
    > {content} 
  </a>
</div>

<style>
a{
  position: relative;
}
  a::before{
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: #f3e5e5;
    transition: all ease-in-out .5s;
    bottom: -1px;
    left: 0;
    transform: scale(0);
  }
a:hover::before{
  transform: scale(1);
}

.active::before{
   transform: scale(1)
}
</style>