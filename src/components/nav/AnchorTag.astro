---
interface Props{
  content : string
  path : string
}
const { content , path} = Astro.props

const currentPath = Astro.url.pathname

---   
<div>
  <a href={path} class="text-zinc-100 hover:text-slate-300 text-2xl px-4"  
    > {content} 
  </a>
 { currentPath === path ? (
   <div
    transition:name="menu-line"
    class="border-b-3 border-b-sky-600 mx-4"/>
 ): (
<div class="border-b-3 border-transparent" />
 )}

</div>