---
import type { GetStaticPaths } from "astro";

import Layout from "../../layouts/Layout.astro";
import PokemonCard from "../../components/pokemons/PokemonCard.astro";
import {getPokemonData } from "..//../utilities/getData"

export const getStaticPaths = ( async () => {
  const paths = await getPokemonData()
  return paths
}) satisfies GetStaticPaths;

const { name , url , descripcion , types } = Astro.props

---
<Layout title={name}>
  <section aria-label=`Datos de PokÃ©mon ${name}` class="flex flex-col justify-center items-center gap-4  pb-12">
      <div class="flex flex-col">
         <PokemonCard  name={name} url={url} isBig  description = {descripcion} types = {types}/>
      </div>
      <div class="flex items-center justify-center w-full">
        <a href="/" class="text-2xl bg-clip-text text-transparent bg-gradient-to-br from-sky-200 to-sky-400 py-1 px-4 rounded-2xl underline "> Ver lista </a>
    </div>
  </section>
 
</Layout>